<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'New route' %>

<h1>Running route creation</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [current_user, @route] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :departure %>
        <%= f.text_field :departure %>

        <%= f.label :arrival %>
        <%= f.text_field :arrival %>

        <%= f.label :difficulty %>
        <%= f.select :difficulty, [ ['Low','low'],['Medium', 'medium'],['Hard','hard'] ] %>

        <%= f.label :distance, 'Distance (in km)' %>
        <%= f.text_field :distance %>

        <%= f.label :time, 'Time (in minutes)' %>
        <%= f.text_field :time %>

        <%= f.submit 'Create a new route', class: 'btn btn-primary btn-lg' %>

    <% end %>
  </div>
</div>
