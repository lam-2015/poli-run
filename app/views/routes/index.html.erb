<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide(:title, 'Routes') %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to 'View my profile', @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Routes
        <% if current_user?(@user) %>
            <%= link_to "New", new_user_route_path, class:"btn btn-primary btn-small", role:"button"%>
        <% end %>
    </h3>

    <% if @routes.any? %>
        <ul class="posts">
          <%= render @routes %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>