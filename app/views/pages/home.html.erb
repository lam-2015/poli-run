<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, "Home" %>

<% if signed_in? %>
    <div class="row">
      <aside class="col-md-3">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </aside>
      <div class="col-md-9">
        <%= render 'shared/post_form' %>
      </div>
    </div>
<% else %>
    <div class="jumbotron text-center">
      <h1>Welcome to PoliRun</h1>

      <h2>
        Sign up or login to start using <%= link_to "PoliRun", root_path %>.
      </h2>

      <%= link_to "Sign up now!", signup_path, class:"btn btn-primary btn-lg", role:"button"%>
    </div>
<% end %>