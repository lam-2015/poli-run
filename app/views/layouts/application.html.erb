<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <!-- gmaps4rails javascript dependencies -->
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
  <%= javascript_include_tag "application" %>
  <% # method to automatically prevent Cross-Site Request Forgery %>
  <%= csrf_meta_tags %>
  <% # partial for the HTML shim %>
  <%= render "layouts/shim" %>
</head>
<body>

<%= render "layouts/header" %>

<div class="container">

  <!-- Page content -->
  <% # the flash message; it supports different type of messages %>
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= value %>
      </div>
  <% end %>

  <%= yield %>

  <!-- Footer -->
  <%= render "layouts/footer" %>

  <% # show debug info if development is the current Rails env %>
  <%= debug(params) if Rails.env.development? %>

</div>

</body>
</html>
