<!-- Fixed navbar -->
<header class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Flix", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links for toggling -->
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% #link_to is the Rails helper to create links (it generates <a.../> tags) %>
        <li><%=link_to "Home", root_path %></li>
        <li><%=link_to "Faq", faq_path %></li>
        <% if signed_in? %>
            <li><%= link_to "Users", '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" id="accountMenu" data-toggle="dropdown">Account <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="accountMenu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
        <% else %>
            <li><%=link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </div> <!--/.nav-collapse -->
  </div> <!-- /.container-fluid -->
</header>